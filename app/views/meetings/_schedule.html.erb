
<%= calendrier(:year => 2016, :month => Time.now.month, :day => Time.now.day, :start_on_monday => true, :display => :week) do |cell_begin_time, cell_end_time| %>
<div class="span2">
	<%number = @meeting.get_team_members_by_hour(cell_begin_time)%>
	<%if number > 0 && (number < @meeting.team_members.length) %>
		<%color = "yellow"%>
	<%elsif number == @meeting.team_members.length%>
		<%color = "red"%>
	<%else%>
		<%color = "limegreen"%>
	<%end%>
	<%if cell_begin_time.hour >= 8 && cell_begin_time.hour <= 24%> 
	<%=content_tag(:div, cell_begin_time.strftime("%I:%M %p"), class: ["btn btn-small btn-default"], style: "height: 45px; background: "+color)%>
	<% end %>
</div>
<% end %>
